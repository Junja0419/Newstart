{
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "redirects": [
            {
                "source": "/oauth2/authorization/{*path}",
                "destination": "/login/oauth2/code/{path}",
                "type": 301
            }
        ],
        "rewrites": [
            {
                "source": "/",
                "run": {
                    "serviceId": "backend",
                    "region": "asia-northeast3"
                }
            },
            {
                "source": "/api/**",
                "run": {
                    "serviceId": "backend",
                    "region": "asia-northeast3"
                }
            },
            {
                "source": "/oauth2/authorization/{*path}",
                "run": {
                    "serviceId": "backend",
                    "region": "asia-northeast3"
                }
            },
            {
                "source": "/login/oauth2/code/**",
                "run": {
                    "serviceId": "backend",
                    "region": "asia-northeast3"
                }
            }
        ]
    }
}
