{
    "hosting": {
        "public": "build",
        "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
        "rewrites": [
            {
                "source": "/api/**",
                "run": {
                    "serviceId": "backend",
                    "region": "asia-northeast3"
                }
            },
            {
                "source": "/oauth2/authorization/{*path}",
                "run": {
                    "serviceId": "backend",
                    "region": "asia-northeast3",
                    "relativePath": "/login/oauth2/code/{path}"
                }
            },
            {
                "source": "/",
                "run": {
                    "serviceId": "backend",
                    "region": "asia-northeast3",
                    "relativePath": "/api"
                }
            },
            {
                "source": "/login/oauth2/code/**",
                "run": {
                    "serviceId": "backend",
                    "region": "asia-northeast3"
                }
            },
            {
                "source": "**",
                "destination": "/index.html"
            }
        ]
    }
}
